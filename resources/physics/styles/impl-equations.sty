\def\bCoeffDependentOfT{\ensuremath{a =  \sum_{i=1}^{\symNumOfCmpnts} \bCoeffVirial{i} \T{a}^{-1}}}
\def\cCoeffDependentOfT{\ensuremath{\cCoeffVirial{} =  \sum_{i=1}^{\symNumOfCmpnts} \cCoeffVirial{i} \T{}^{-1}}}

% Coeficientes para la ecuación desarrollada del 2do coeficiente virial
\def\bvv{\ensuremath{\bCoeffVirial{\nameV \nameV}}}
\def\bgv{\ensuremath{\bCoeffVirial{\nameG \nameV}}}
\def\bgg{\ensuremath{\bCoeffVirial{\nameG \nameG}}}

% Coeficientes para la ecuación desarrollada del 3er coeficiente virial
\def\cggv{\ensuremath{\cCoeffVirial{\nameG \nameG \nameV}}}
\def\cgvv{\ensuremath{\cCoeffVirial{\nameG \nameV \nameV}}}
\def\cvvv{\ensuremath{\cCoeffVirial{\nameV \nameV \nameV}}}
\def\cggg{\ensuremath{\cCoeffVirial{\nameG \nameG \nameG}}}

\def\eqVirialFactorCorrection{\ensuremath{
  \begin{split}
    \ln f &= \left[ \frac{(1 + \isothermalCompresibility \Pvap)(\Ptotal - \Pvap) - \frac{1}{2} \isothermalCompresibility (\Ptotal^2 - \Pvap^2)}{\univConstGasEos \T{}} \right] \molarVolumeSaturate \\
          &+ \ln (1 - \henryLaw {\symCompGsat} \Ptotal) - \frac{2 {\symCompGsat}^3 (2 - 3 {\symCompGsat}) \Ptotal^2}{(\univConstGasEos \T{})^2} \bgg \bgv \\
          &+ \frac{{\symCompGsat}^2}{\univConstGasEos \T{}} \bgg - \frac{2 {\symCompGsat}^2 \Ptotal}{\univConstGasEos \T{}} \bgv - \left[ \frac{ \Ptotal - \Pvap}{\univConstGasEos \T{}} - \frac{{\symCompGsat}^2 \Ptotal}{\univConstGasEos \T{}} \right] \bgg \\
          &+ \frac{3 {\symCompGsat}^2}{2 (\univConstGasEos \T{})^2} (1 + 2 {\symCompGsat}) \Ptotal^2 \cggv - \frac{3 {\symCompGsat}^2 (1 - {\symCompGsat}) \Ptotal^2}{(\univConstGasEos \T{})^2} \cgvv \\
          &- \left[ \frac{(1 + 2 {\symCompGsat})(1 - {\symCompGsat})^2 \Ptotal^2 - \Pvap^2}{2 (\univConstGasEos \T{})^2} \right] \cvvv - \frac{3 {\symCompGsat}^4 \Ptotal^2}{2 (\univConstGasEos \T{})^2} \bgg^2 \\
          &- \frac{{\symCompGsat}^2 (1 - 3 {\symCompGsat})(1 - {\symCompGsat}) \Ptotal^2}{(\univConstGasEos \T{})^2} \bgg \bvv \\
          &+ \frac{6 {\symCompGsat}^2 (1 - {\symCompGsat})^2 \Ptotal^2}{(\univConstGasEos \T{})^2} \bvv \bgv \\
          &- \frac{2 {\symCompGsat}^2 (1 - {\symCompGsat})(1 - 3 {\symCompGsat}) \Ptotal^2}{(\univConstGasEos \T{})^2} \bgv^2 + \frac{{\symCompGsat}^3 \Ptotal^2}{(\univConstGasEos \T{})^2} \cggg \\
          &- \left[ \frac{\Pvap^2 - (1 + 3 {\symCompGsat})(1 - {\symCompGsat})^3 \Ptotal^2}{2 (\univConstGasEos \T{})^2} \right] \bvv^2
  \end{split}
}}


