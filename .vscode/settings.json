{
	"files.autoSave": "off",
	"files.autoSaveDelay": 3000,
	"editor.wordWrapColumn": 80,
	"editor.tokenColorCustomizations": {
		"comments": "#443838",
		"textMateRules": []
	},
	"workbench.colorCustomizations": {
    "editor.selectionBackground": "#135564",
    "editor.selectionHighlightBackground": "#135564"
	},
	"files.exclude": {
		"*.bcf": true,
		"*.aux": true,
		"*.ist": true,
		"*.acn": true,
		"*.log": true,
