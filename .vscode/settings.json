		"*.suc": true,
		"*.sym": true,
		"*.out": true,
		"*.sub": true,
		"*.gz": true,
		"*.bbl": true,
		"*.lof": true,
		"capitulos/*.bcf": true,
		"capitulos/*.aux": true,
		"capitulos/*.ist": true,
		"capitulos/*.acn": true,
		"capitulos/*.log": true,
		"capitulos/*.xml": true,
		"capitulos/*.lot": true,
		"capitulos/*.syc": true,
		"capitulos/*.suc": true,
		"capitulos/*.sym": true,
		"capitulos/*.out": true,
		"capitulos/*.sub": true,
		"capitulos/*.gz": true,
		"capitulos/*.bbl": true,
		"capitulos/*.lof": true,
		".cvsignore": true,
		".gitignore": true,
		"extras/.cvsignore": true,
		"extras/*.bcf": true,
		"extras/*.aux": true,
		"extras/*.ist": true,
		"extras/*.acn": true,
		"extras/*.log": true,
		"extras/*.xml": true,
		"extras/*.lot": true,
		"extras/*.syc": true,
		"extras/*.suc": true,
		"extras/*.sym": true,
		"extras/*.out": true,
		"extras/*.sub": true,
		"extras/*.gz": true,
		"extras/*.bbl": true,
		"extras/*.lof": true,
		"physics/*.aux": true,
	},

  "latex-workshop.hover.citation.enabled": true,
  
	"latex-workshop.hover.ref.enabled": true,
	"latex-workshop.view.outline.follow.editor": true,
  "latex-workshop.intellisense.package.enabled": true,
	"latex-workshop.intellisense.includegraphics.preview.enabled": true,
	"latex-workshop.intellisense.file.base": "both",
	"latex-workshop.latex.search.rootFiles.include": [
		"**/*.sty",
		"**/*.tex",
		"**/*.rnw",
		"**/*.Rnw"
	],
	"latex-workshop.message.error.show": true,
	"latex-workshop.latex.rootFile.useSubFile": true,
	"latex-workshop.latex.rootFile.doNotPrompt": true,
	"latex-workshop.intellisense.citation.label": "bibtex key",
	"latex-utilities.message.error.show": true,
	"latex-workshop.message.latexlog.exclude": [],
	"latex-workshop.showContextMenu": true,
	"latex-workshop.message.log.show": false,




	"latex-workshop.latex.autoBuild.run": "onSave",
	"workbench.colorTheme": "Best Themes - Brogrammer", // Menú contextual
	"latex-workshop.synctex.path": "synctex",
	"latex-workshop.synctex.indicator": "circle",
	// "latex-workshop.view.pdf.color.dark.backgroundColor": "#fffff",
	"latex-workshop.view.pdf.viewer": "external",
	"latex-workshop.view.pdf.color.dark.pageColorsBackground": "#b6b6b6",
	"latex-workshop.selection.smart.latex.enabled": true,
	"latex-workshop.view.pdf.invertMode.hueRotate": 180,
	"cSpell.language": "en,es-ES",
